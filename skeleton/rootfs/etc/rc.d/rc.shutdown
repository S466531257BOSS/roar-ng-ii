#!/bin/dash

# /etc/rc.d/rc.shutdown: a system shutdown script

# stop extra daemons
for i in /etc/init.d/*
do
	[ -x $i ] && $i stop
done

# stop udev
kill $(pidof udevd)

# stop logging daemons
kill $(pidof syslogd)
kill $(pidof klogd)

# disable swap
swapoff -a

# flush all file system buffers
sync
