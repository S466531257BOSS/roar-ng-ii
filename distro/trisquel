# inherit from the Ubuntu support plug-in
. ./ubuntu

# repositories - package list URL|repository name
REPOSITORIES="http://es.archive.trisquel.info/trisquel/dists/$(get_current_distro_version)-updates/main/binary-$(get_current_distro_arch)/Packages.bz2|trisquel-updates_main
              http://es.archive.trisquel.info/trisquel/dists/$(get_current_distro_version)-security/main/binary-$(get_current_distro_arch)/Packages.bz2|trisquel-security
              http://es.archive.trisquel.info/trisquel/dists/$(get_current_distro_version)-backports/main/binary-$(get_current_distro_arch)/Packages.bz2|trisquel-backports
              http://es.archive.trisquel.info/trisquel/dists/$(get_current_distro_version)/main/binary-$(get_current_distro_arch)/Packages.bz2|trisquel-main"

# package download mirrors - more at http://trisquel.info/en/wiki/packages-repository
MIRRORS="http://es.archive.trisquel.info/trisquel|trisquel-updates_main,trisquel-security,trisquel-backports,trisquel-main
         http://us.archive.trisquel.info/trisquel|trisquel-updates_main,trisquel-security,trisquel-backports,trisquel-main
         http://mirror.fsf.org/trisquel|trisquel-updates_main,trisquel-security,trisquel-backports,trisquel-main"

# trisquel_get_architecture_aliases()
# purpose: translates an architecture name to the distribution's nicknames
# input  : an architecture name
# output : the distribution's names for the architecture, ordered by accuracy
trisquel_get_architecture_aliases() {
	ubuntu_get_architecture_aliases $1
}

# trisquel_download_package_list()
# purpose: downloads the distribution's package list
# input  : the package list URL and the destination path
# output : -
trisquel_download_package_list() {
	ubuntu_download_package_list "$1" "$2"
}

# trisquel_convert_package_list()
# purpose: converts a repository's package list to roar-ng's common format
# input  : the package list path and the repository name
# output : a package list in roar-ng's format
trisquel_convert_package_list() {
	ubuntu_convert_package_list "$1" "$2"
}

# trisquel_extract_package()
# purpose: extracts a package of the distribution into a directory
# input  : a package path and the destination directory
# output : -
trisquel_extract_package() {
	ubuntu_extract_package "$1" "$2"
}